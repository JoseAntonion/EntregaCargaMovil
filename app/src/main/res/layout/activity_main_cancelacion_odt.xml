<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:srcCompat="@drawable/pullman_cargo" />

            <TextView
                android:id="@+id/lblTituloCancelacionOdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelacion de ODT"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="259dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <RadioGroup
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/opciones_pago"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbFactura"
                            android:layout_width="114dp"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="FACTURA" />

                        <LinearLayout
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"></LinearLayout>

                        <RadioButton
                            android:id="@+id/rbBoleta"
                            android:layout_width="101dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.42"
                            android:checked="false"
                            android:text="BOLETA" />

                    </RadioGroup>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.93"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="38dp"
                android:layout_height="274dp"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtRutFactura"
                    android:layout_width="245dp"
                    android:layout_height="32dp"
                    android:background="@drawable/fondo_txt"
                    android:ems="10"
                    android:hint="   RUT"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:textAlignment="textStart" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:orientation="horizontal"></LinearLayout>

                <EditText
                    android:id="@+id/txtRazonFactura"
                    android:layout_width="245dp"
                    android:layout_height="32dp"
                    android:background="@drawable/fondo_txt"
                    android:ems="10"
                    android:hint="   RAZON"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:textAlignment="textStart" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:orientation="horizontal">

                </LinearLayout>

                <EditText
                    android:id="@+id/txtDireccionFactura"
                    android:layout_width="245dp"
                    android:layout_height="32dp"
                    android:background="@drawable/fondo_txt"
                    android:ems="10"
                    android:hint="   DIRECCION"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:textAlignment="textStart" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:orientation="horizontal">

                </LinearLayout>

                <Spinner
                    android:id="@+id/sprComunaFactura"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    tools:style="?android:attr/webTextViewStyle"
                    tools:theme="@style/AlertDialog.AppCompat.Light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:orientation="horizontal">

                </LinearLayout>

                <Spinner
                    android:id="@+id/sprCiudadFactura"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    tools:style="?android:attr/webTextViewStyle"
                    tools:theme="@style/AlertDialog.AppCompat.Light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:orientation="horizontal">

                </LinearLayout>

                <EditText
                    android:id="@+id/txtTelefonoFactura"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/fondo_txt"
                    android:ems="10"
                    android:hint="   TELEFONO"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:textAlignment="textStart" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:orientation="horizontal">

                </LinearLayout>

                <EditText
                    android:id="@+id/txtGiroFactura"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/fondo_txt"
                    android:ems="10"
                    android:hint="   GIRO"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:textAlignment="textStart" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblTotalFacturaBoleta"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="TOTAL:"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="18dp"
                        android:layout_height="33dp"
                        android:orientation="horizontal"></LinearLayout>

                    <TextView
                        android:id="@+id/lblValorTotFacturaBoleta"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="000" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="19dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

            <Button
                android:id="@+id/btnLimpiarCancelacionOdt"
                style="@style/Botton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.36"
                android:text="Limpiar" />

            <LinearLayout
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>

            <Button
                android:id="@+id/btnAceptarCancelacionOdt"
                style="@style/Botton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:text="Aceptar" />

            <LinearLayout
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>